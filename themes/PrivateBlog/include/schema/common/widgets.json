{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/common/widgets.json",
    "description": "侧栏小部件的配置 \n http://ppoffice.github.io/hexo-theme-icarus/categories/Widgets/",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "position": {
                "type": "string",
                "description": "小部件应该放在哪里，左边栏还是右边栏",
                "default": "left"
            }
        },
        "oneOf": [{
                "$ref": "/widgets/profile.json"
            },
            {
                "$ref": "/widgets/toc.json"
            },
            {
                "$ref": "/widgets/links.json"
            },
            {
                "$ref": "/widgets/categories.json"
            },
            {
                "$ref": "/widgets/recent_posts.json"
            },
            {
                "$ref": "/widgets/archives.json"
            },
            {
                "$ref": "/widgets/tags.json"
            },
            {
                "$ref": "/widgets/subscribe_email.json"
            },
            {
                "$ref": "/widgets/adsense.json"
            },
            {
                "$ref": "/widgets/ads_x.json"
            },
            {
                "$ref": "/widgets/hot_recommend.json"
            },
            {
                "$ref": "/widgets/latest_comment.json"
            },
            {
                "$ref": "/widgets/recommend_post.json"
            }
        ],
        "required": [
            "position"
        ]
    }
}