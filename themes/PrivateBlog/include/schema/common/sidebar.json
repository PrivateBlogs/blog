/* 共同 -> 侧边栏 */
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/Common/Sidebar.json",
    "description": "侧边栏的配置.\nPlease be noted that a sidebar is only visible when it has at least one widget",
    "type": "object",
    "properties": {
        "left": {
            "type": "object",
            "description": "左栏的配置",
            "properties": {
                "sticky": {
                    "type": "boolean",
                    "description": "当页面滚动时，侧边栏是否保持在顶部",
                    "default": false
                }
            }
        },
        "right": {
            "type": "object",
            "description": "右栏的配置",
            "properties": {
                "sticky": {
                    "type": "boolean",
                    "description": "当页面滚动时，侧边栏是否保持在顶部",
                    "default": false
                }
            }
        }
    }
}